{% import '::widgets/custom_form_label_redesign.html.twig' as custom_form_label %}

<div class="form-column__container clearfix">
    <h3 class="language-title">{% trans %}Service Areas{% endtrans %}</h3>
    <div class="form__section">
        <div class="form-column__container clearfix">
            <div class="form__column">
                <div class="form__row vertical__row">
                    {% for key, serviceType in businessProfileForm.serviceAreasType.children %}
                        <div>
                            {{ form_label(serviceType) }}
                            {{ form_widget(serviceType) }}
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="form__column">
                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ form_label(businessProfileForm.milesOfMyBusiness) }}
                        {{ form_widget(businessProfileForm.milesOfMyBusiness, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    {{ form_label(businessProfileForm.localities) }}
                    {{ form_widget(businessProfileForm.localities) }}
                </div>

                <div class="form__row vertical__row">
                    {{ form_label(businessProfileForm.neighborhoods) }}
                    {{ form_widget(businessProfileForm.neighborhoods) }}
                </div>
            </div>
        </div>
        <!-- column container -->
    </div><!-- form-section -->

    <h3 class="language-title">{% trans %}Address{% endtrans %}</h3>
    <div class="form__section">
        <div class="form-column__container clearfix">
            <div class="form__column">
                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.streetAddress) }}
                        {{ form_widget(businessProfileForm.streetAddress, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    {{ custom_form_label.widget(businessProfileForm.country) }}
                    {{ form_widget(businessProfileForm.country, {'attr': {'style': 'width: 100%'}}) }}
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.state) }}
                        {{ form_widget(businessProfileForm.state, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    {{ custom_form_label.widget(businessProfileForm.catalogLocality) }}
                    {{ form_widget(businessProfileForm.catalogLocality, {'attr': {'style': 'width: 100%'}}) }}
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.city) }}
                        {{ form_widget(businessProfileForm.city, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.zipCode) }}
                        {{ form_widget(businessProfileForm.zipCode, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.extendedAddress) }}
                        {{ form_widget(businessProfileForm.extendedAddress, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.crossStreet) }}
                        {{ form_widget(businessProfileForm.crossStreet, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.customAddress) }}
                        {{ form_widget(businessProfileForm.customAddress, {'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ form_label(businessProfileForm.hideAddress) }}
                        {{ form_widget(businessProfileForm.hideAddress) }}
                    </div>
                </div>
            </div>

            <div class="form__column">
                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.latitude) }}
                        {{ form_widget(businessProfileForm.latitude) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    <div class="form__field field--website">
                        {{ custom_form_label.widget(businessProfileForm.longitude) }}
                        {{ form_widget(businessProfileForm.longitude) }}
                    </div>
                </div>

                <div class="form__row vertical__row">
                    {{ form_label(businessProfileForm.map) }}
                    {{ form_widget(businessProfileForm.map) }}
                </div>

                <div class="form__row vertical__row">
                    <a href="#" class="btn green-btn geo-btn" id="geocodeButton">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                        {% trans %}Geocode{% endtrans %}
                    </a>
                </div>
            </div>
        </div>
        <!-- column container -->
    </div><!-- form-section -->
</div>
