<section id="profile-media" class="profile-manage profile-manage-general">
    <div class="container general-manage">
        <div class="row">
            <div class="col-md-12">
                <div class="cards">
                    <div class="form-group card-item">
                        <div class="card-item-name">
                            <span>
                                {% trans %}Media{% endtrans %}
                            </span>
                        </div>
                        <div class="col-xs-12 form-col">
                            <div class="col-xs-6">
                                <label class="btn green-btn upload btn-file" data-url="{{ path('domain_business_images_upload') }}">
                                    {{ form_widget(businessProfileForm.files) }}
                                    <i class="fa fa-upload" aria-hidden="true"></i><span>Upload</span>
                                </label>
                            </div>
                        </div>
                        <br /><br /><br />
                        <div id="gallery">
                            {%
                                include 'DomainBusinessBundle:Images/blocks:gallery.html.twig'
                                with { 'images': businessProfileForm.images}
                            %}
                        </div>
                    </div>
                </div>
            </div>
            {% include 'DomainBusinessBundle:Profile:blocks/form_footer.html.twig' %}
        </div>
    </div>
</section>