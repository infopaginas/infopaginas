{% extends base_template %}

{% block tab_menu %}
    {{ knp_menu_render(admin.sidemenu(action), {'currentClass' : 'active', 'template': admin_pool.getTemplate('tab_menu_template')}, 'twig') }}
{% endblock %}

{% block actions %}
    <li>{% include 'SonataAdminBundle:Button:list_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:edit_button.html.twig' %}</li>
    <li>{% include 'SonataAdminBundle:Button:create_button.html.twig' %}</li>
{% endblock %}

{% block navbar_title %}
    {{ 'physical_deleting_element'|trans({}, 'SonataAdminBundle') ~ ' "' ~ object ~ '"' }}
{% endblock %}

{% block content %}
    <div class="sonata-ba-delete">

        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">{{ 'title_physical_delete'|trans({}, 'SonataAdminBundle') }}</h3>
            </div>
            <div class="box-body">
                {% if existDependentFields is not defined or existDependentFields is null %}
                    {{ 'message_physical_delete_confirmation'|trans({'%title%': admin.toString(object)}, 'SonataAdminBundle') }}
                {% endif %}
            </div>
            <div class="box-footer clearfix">
                <form method="POST" action="{{ admin.generateObjectUrl('delete_physical', object) }}">
                    <input type="hidden" name="_method" value="DELETE">

                    {% if existDependentFields is not defined or existDependentFields is null %}
                        <button type="submit" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                            {{ 'btn_delete'|trans({}, 'SonataAdminBundle') }}
                        </button>
                    {% endif %}

                    {% if admin.hasRoute('list') and admin.isGranted('LIST', object) %}
                        <a class="btn btn-danger" href="{{ admin.generateUrl('list') }}">
                            <i class="fa fa-minus-circle"></i>
                            {{ 'btn_cancel'|trans({}, 'SonataAdminBundle') }}
                        </a>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block nav_bar_right %}
    <li class="dropdown sonata-actions">
        {% if admin.hasRoute('list') and admin.isGranted('LIST') %}
            <a href="{{ admin.generateUrl('list') }}">
                <i class="fa fa-list"></i>
                {{ 'return_to_list'|trans({}, 'SonataAdminBundle') }}
            </a>
        {% endif %}
    </li>
{% endblock %}