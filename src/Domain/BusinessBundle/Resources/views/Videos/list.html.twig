{% extends "DomainSiteBundle:Layout:base.html.twig" %}

{% block breakcrumbs %}
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="crumbs">
                    <a href="/">
                        {% trans %}Home{% endtrans %}
                        <span>&nbsp; &raquo;</span>
                    </a>
                    &nbsp;
                    <span>{% trans %}Videos{% endtrans %}</span>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block main %}
    <section id="articles" class="articles-videos view-all">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h1 class="blue-c">{% trans %}Videos{% endtrans %}</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                {% include 'DomainSiteBundle:Home:widgets/videos_widget.html.twig' with {'width': 640, 'height': 480} %}
            </div>
        </div>
    </section>
{% endblock %}
