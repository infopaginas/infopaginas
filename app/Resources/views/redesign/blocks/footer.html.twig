<footer class="about-infopaginas">
    <div class="about__item copyright">
        <span>
            {% trans with { '%date%': 'now'|date(year_date_format) } %}infopaginos.copyright{% endtrans %}
            <a href="{{ absolute_url(path('domain_site_home_index')) }}"
               target="_blank" title="Go to Infopaginas site"
               data-bw-gtm-event-click
               data-bw-gtm-label="Infopáginas::{{ absolute_url(path('domain_site_home_index')) }}">
                {% trans %}Infopáginas{% endtrans %}
            </a>
        </span>
    </div>
    <div class="about__item phone">
        <div class="hide-desktop">
            <a href="tel:+1{{ config(CONFIG.FOOTER_PHONE_NUMBER) }}">
                <i class="fa fa-phone"></i>
                <span>{{ config(CONFIG.FOOTER_PHONE_NUMBER) }}</span>
            </a>
        </div>
        <div class="hide-mobile">
            <i class="fa fa-phone"></i>
            <span>{{ config(CONFIG.FOOTER_PHONE_NUMBER) }}</span>
        </div>
    </div>
    <div class="about__item email hide-mobile">
        <i class="fa fa-envelope"></i>
        <span>
            {{ config(CONFIG.FOOTER_EMAIL) }}
        </span>
    </div>
    <div class="about__item address hide-mobile">
        <a id="officeAddressLink" href="#" target="_blank" rel="noopener nofollow"
           data-coordinates="{{ config(CONFIG.OFFICE_COORDINATES) }}"
        >
            <i class="fa fa-map-marker"></i>
            <span>
                {% trans %}infopaginos.address{% endtrans %}
            </span>
        </a>
    </div>
</footer>