<div class="card-item
    {% if (hasSubs(item, 'CODE_PREMIUM_PLUS')) %}
        premium
    {% endif %}
    ">
    <div class="card-title">
        <label class="control-label card-label" for="card-check">
            <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}">
                <span class="card-number">{# item.order #}.</span>
            </a>
                &nbsp;
            <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}">
                <span class="card-name">{{ item.name }}</span>
            </a>
                &nbsp;
            {% if (hasSubs(item, "CODE_PREMIUM_PLUS")) %}
                <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}">
                    <span class="card-slogan"><q>{{ item.slogan }}</q></span>
                </a>
            {% endif %}
        </label>
    </div>
    <div class="col-xs-5 schedule">
        <div class="address">
            <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}#address" class="address-link">
                <span class="address-info">{{ item.city}}, {{ item.state }} {{ item.zipCode }}</span>
            </a>
            <a href="" class="direction">Get Direction <span>&#187;</span></a>
            <a href="" class="btn green-btn mobile-btn"><i class="fa fa-phone" aria-hidden="true"></i>&nbsp; Call<span></span></a>
            <a href="" class="get-direction mobile-btn btn">Get Direction<span></span></a>
        </div>
        <div class="shift">
            <span>Mon - Fri  9 a.m. - 7 p.m.</span>
            <span>Sat 9:00 am-2:00pm</span>
        </div>
    </div>
    <div class="col-xs-7 company-contact">
        <ul class="company-info">
            <li><a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}#website"><i class="fa fa-home" aria-hidden="true"></i><span>{{ item.website }}</span></a>
            </li>
            <li><a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}#email"><i class="fa fa-envelope"
                                                            aria-hidden="true"></i><span>{{ item.email }}</span></a>
            </li>
            <li>
                <div class="dropdown filter-drop">
                    <i class="fa fa-phone" aria-hidden="true"></i>

                    <div class="select-container">
                        <select class="form-control select-control">
                            <option>phone number</option>
                            <option>NY</option>
                        </select>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div class="col-xs-12 additional-info">
        <div class="icons">
            {% if (hasSubs(item, "CODE_PREMIUM_GOLD")) %}
                <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}#photo"><i class="photo"></i></a>
            {% endif %}
            {% if (hasSubs(item, "CODE_PREMIUM_PLATINUM")) %}
                <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}#video"><i class="video"></i></a>
            {% endif %}
            {% if (hasSubs(item, "CODE_PRIORITY")) %}
                <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}#ad"><i class="ad"></i></a>
            {% endif %}
        </div>
        <div class="reviews">
            <a href="{{ path('domain_business_default_view', { 'slug' : item.slug }) }}#reviews">
                <div class="star-rating">
                    <span class="fa fa-star-o" data-rating="1"></span>
                    <span class="fa fa-star-o" data-rating="2"></span>
                    <span class="fa fa-star-o" data-rating="3"></span>
                    <span class="fa fa-star-o" data-rating="4"></span>
                    <span class="fa fa-star-o" data-rating="5"></span>
                    <input type="hidden" name="whatever" class="rating-value" value="{{ item.getBusinessReviewsAvgMark }}">
                </div>
                <span>{{ item.getBusinessReviewsCount }} Reviews</span>
            </a>
        </div>
    </div>
    {% if (hasSubs(item, "CODE_PREMIUM_PLUS")) %}
        <div class="company-logo"><img src="http://placehold.it/120x120"></div>
    {% endif %}
</div>
