<!-- Modal Update Password -->
<div class="modal fade" id="updatePasswordModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&#10005;</button>
                <h4 class="modal-title">
                    {% trans %}Update Password{% endtrans %}
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal login-form" id="passwordUpdateForm" name="{{ passwordUpdateForm.vars.name }}">
                    <div id="updatePasswordSpinContainer" class="spinner-container"></div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-12">
                                {{ form_widget(passwordUpdateForm.oldPassword) }}
                                <span class="help-block"></span>
                                {{ form_widget(passwordUpdateForm.newPassword.first) }}
                                <span class="help-block"></span>
                                {{ form_widget(passwordUpdateForm.newPassword.second) }}
                                <span class="help-block"></span>
                                {{ form_rest(passwordUpdateForm) }}
                            </div>
                            <div class="col-xs-12 text-center">
                                <a href="#" id="savePassword" class="green-btn login-btn" style="width: 100%;">
                                    <i class="fa fa-save" aria-hidden="true"></i>
                                    {% trans %}Update Password{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>