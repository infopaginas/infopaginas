<option data-route="{{ absolute_url(path(pageRouter, searchData|merge({'category': '' }))) }}">
    {% trans %}Category{% endtrans %}
</option>
{% if results and results.categories is not empty %}
    {% for category in results.categories %}
        {% set is_selected = (searchData.category == category.id) %}
        <option data-route="{{ absolute_url(path(pageRouter, searchData|merge({'category': category.id }))) }}"
            {% if is_selected %}selected{% endif %} value="{{ category.id }}">
            {{ category.getName() }}
        </option>
    {% endfor %}
{% endif %}
