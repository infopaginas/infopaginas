<div id="popupModal" class="popup" data-time-to-appear="{{ config(CONFIG.BUSINESS_PROFILE_POPUP_TIME_TO_APPEAR) }}">
    <div class="message">
        <h3>{{ businessProfile.popup.message }}</h3>
    </div>
    <div class="attachment">
        <a href="{{ businessProfile.popup.file }}" target="_blank" class="button button--action">{% trans %}PopupButton{% endtrans %}</a>
    </div>
    <button type="button" class="button--remove hide-modal"><i class="fa fa-remove"></i></button>
</div>
