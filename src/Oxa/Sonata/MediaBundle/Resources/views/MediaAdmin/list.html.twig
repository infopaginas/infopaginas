{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block list_filters_actions %}
    {%- if admin.datagrid.filters|length and admin.showFilters is defined and admin.showFilters %}
        <ul class="nav navbar-nav navbar-right">

            <li class="dropdown sonata-actions">
                <a href="#" class="dropdown-toggle sonata-ba-action" data-toggle="dropdown">
                    <i class="fa fa-filter" aria-hidden="true"></i>
                    {{ 'link_filters'|trans({}, 'AdminDomainBusinessBundle') }} <b class="caret"></b>
                </a>

                <ul class="dropdown-menu" role="menu">
                    {% for filter in admin.datagrid.filters if (filter.options['show_filter'] is same as(true) or filter.options['show_filter'] is null) %}
                        {% set filterActive = ((filter.isActive() or filter.options['show_filter']) and not admin.isDefaultFilter(filter.formName)) %}
                        <li>
                            <a href="#" class="sonata-toggle-filter sonata-ba-action" filter-target="filter-{{ admin.uniqid }}-{{ filter.name }}" filter-container="filter-container-{{ admin.uniqid() }}">
                                <i class="fa {{ (filter.isActive() or filter.options['show_filter']) ? 'fa-check-square-o' : 'fa-square-o' }}"></i>{{ filter.label|trans({}, filter.translationDomain ?: admin.translationDomain) }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        </ul>
    {% endif -%}
{% endblock %}

{% block list_table %}

    <div class="box box-primary">
        <div class="box-body">
            <ul class="nav nav-pills">
                <li>
                    <a class="media-list-context" href="javascript:;">
                        <strong>{{ "label.select_context"|trans({}, 'SonataMediaBundle') }}</strong>
                    </a>
                </li>

                {% for name, context in media_pool.contexts %}

                    {% if context.providers|length == 0 %}
                        {% set urlParams = {'context' : name } %}
                    {% else %}
                        {% set urlParams = {'context' : name, 'provider' : context.providers[0] } %}
                    {% endif %}

                    {% if name == persistent_parameters.context %}
                        <li class="active"><a
                        {% if admin.showOtherContexts == true %}
                             href="{{ admin.generateUrl('list', urlParams) }}"
                        {% else %}
                             href="javascript:;" class="media-list-context"
                        {% endif %}
                        >{{ name|trans({}, 'SonataMediaBundle') }}</a></li>
                    {% elseif admin.showOtherContexts == true %}
                        <li><a href="{{ admin.generateUrl('list', urlParams) }}">{{ name|trans({}, 'SonataMediaBundle') }}</a></li>
                    {% endif %}
                {% endfor %}

                {% set providers = media_pool.getProviderNamesByContext(persistent_parameters.context) %}

                {% if providers|length > 1 %}
            </ul>
        </div>
        <div class="box-footer">
            <ul class="nav nav-pills">
                <li><a href="javascript:;"><strong>{{ "label.select_provider"|trans({}, 'SonataMediaBundle') }}</strong></a></li>

                {% if admin.showOtherContexts == true %}
                    {% if not persistent_parameters.provider %}
                        <li class="active"><a href="{{ admin.generateUrl('list', {'context': persistent_parameters.context, 'provider': null}) }}">{{ "link.all_providers"|trans({}, 'SonataMediaBundle') }}</a></li>
                    {% else %}
                        <li><a href="{{ admin.generateUrl('list', {'context': persistent_parameters.context, 'provider': null}) }}">{{ "link.all_providers"|trans({}, 'SonataMediaBundle') }}</a></li>
                    {% endif %}
                {% endif %}

                {% for provider_name in providers %}
                    {% if persistent_parameters.provider == provider_name%}
                        <li class="active"><a href="
                        {% if admin.showOtherContexts == true %}
                            {{ admin.generateUrl('list', {'context': persistent_parameters.context, 'provider': provider_name}) }}
                        {% else %}
                            javascript:;
                        {% endif %}
                        ">{{ provider_name|trans({}, 'SonataMediaBundle') }}</a></li>
                    {% elseif admin.showOtherContexts == true %}
                        <li><a href="{{ admin.generateUrl('list', {'context': persistent_parameters.context, 'provider': provider_name}) }}">{{ provider_name|trans({}, 'SonataMediaBundle') }}</a></li>
                    {% endif %}
                {% endfor %}
                {% endif %}
            </ul>
        </div>
    </div>

    {{ parent() }}

    {% if admin.showOtherContexts != true %}
        {# hide filter to display for user only pictures of special context #}
        {# cuz all pictures of special using must have the same scaled variants set #}
        {% block list_filters %}
        {% endblock %}
    {% endif %}

{% endblock %}