<div id="loginModal" class="modal modal--login" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal__outside"></div>
    <div class="modal__content">
        <h2>{% trans %}Login{% endtrans %}</h2>
        <div class="modal__section">
            <form class="account-form login-form" id="loginForm">
                <div class="form__field field--user">
                    <label>{% trans %}Email{% endtrans %}</label>
                    {{ form_widget(loginForm._username, {'attr': {'placeholder':'', 'autocomplete':'off'}} ) }}
                </div>
                <div class="form__field field--password">
                    <label>{% trans %}Password{% endtrans %}</label>
                    {{ form_widget(loginForm._password, {'attr': {'placeholder':'', 'autocomplete':'off'}} ) }}
                </div>
                <div class="form__actions">
                    {{ form_rest(loginForm) }}
                    <a class="button button--small button--text forgot-password-button" href="#" data-change-modal-id="forgottenPasswordModal">{% trans %}Forgot password?{% endtrans %}</a>
                    <button type="button" class="button button--action" id="loginButton">{% trans %}Log In{% endtrans %}</button>
                </div>
            </form>
        </div>

        <div class="modal__section login__footer">
            <p>{% trans %}New to Infop√°ginas{% endtrans %} <a href="#" data-change-modal-id="regModal">{% trans %}Create an account{% endtrans %} <i class="fa fa-angle-right"></i></a></p>
        </div><!-- modal__section -->
        <button type="button" class="button--remove hide-modal"><i class="fa fa-remove"></i></button>
    </div><!-- modal__content -->
</div><!-- modal -->
