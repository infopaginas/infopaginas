{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}

{% block field %}
    {% if object.id is not null %}
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class=" control-label">
                        Date Start
                    </label>

                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                        <div class="input-group">
                            <div class="input-group date">
                                <input id="{{ admin.uniqid }}_{{ field_description.name }}DateStart" type="text" class="sonata-medium-date form-control" data-date-format="{{ field_description.options.format }}" value="{{ field_description.options.dateStart }}">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class=" control-label">
                        Date End
                    </label>

                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                        <div class="input-group">
                            <div class="input-group date">
                                <input id="{{ admin.uniqid }}_{{ field_description.name }}DateEnd" type="text" class="sonata-medium-date form-control" data-date-format="{{ field_description.options.format }}" value="{{ field_description.options.dateEnd }}">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button id="{{ admin.uniqid }}_{{ field_description.name }}Filter" type="button" class="btn btn-primary" data-report-filter>
                        <i class="fa fa-filter" aria-hidden="true"></i>
                        Filter
                    </button>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group" id="sonata-ba-field-container-{{ admin.uniqid }}_period">
                    <label class="control-label">
                        Fix Range
                    </label>

                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                        <ul id="{{ admin.uniqid }}_{{ field_description.name }}_period" class="list-unstyled">
                            {% for key, period in field_description.options.periodChoices %}
                                <li>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" id="{{ admin.uniqid }}_{{ field_description.name }}_period_{{ loop.index }}" name="{{ admin.uniqid }}_{{ field_description.name }}[period]" value="{{ key }}" data-month="{{ get_month_range_by_period(key) }}" {% if key == field_description.options.periodData %}checked="checked"{% endif %}>
                                            <span class="control-label__text">{{ period|trans }}</span>
                                        </label>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
