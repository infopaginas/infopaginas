<!-- Modal Forgotten Password -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&#10005;</button>
                <h4 class="modal-title">
                    {% trans %}Update Password{% endtrans %}
                </h4>
            </div>
            <div class="modal-body">
                <div id="resetPasswordSpinContainer" class="spinner-container"></div>
                <form class="form-horizontal login-form" id="resetPasswordForm" name="{{ resetPasswordForm.vars.name }}">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-12">
                                {{ form_widget(resetPasswordForm.plainPassword.first) }}
                                <span class="help-block"></span>
                                {{ form_widget(resetPasswordForm.plainPassword.second) }}
                                <span class="help-block"></span>
                                {{ form_rest(resetPasswordForm) }}
                            </div>
                            <div class="col-xs-12 text-center">
                                <a href="#" id="resetPasswordButton" class="green-btn login-btn full-width">
                                    <i class="fa fa-send" aria-hidden="true"></i>
                                    {% trans %}Update Password{% endtrans %}
                                </a>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>