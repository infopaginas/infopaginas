<section id="profile-media" class="profile-manage profile-manage-general">
    <div class="container general-manage">
        <div class="row">
            <div class="col-md-12 business-container">
                <div class="cards">
                    <div class="form-group card-item">
                        <div class="card-item-name">
                            <span>
                                {% trans %}Media{% endtrans %}
                            </span>
                        </div>
                        <div class="col-xs-12 form-col">
                            <div class="col-xs-12">
                                <span>{% trans %}UPLOAD AN IMAGE{% endtrans %}:</span>
                            </div>
                            <div class="col-xs-12">
                                <label class="btn green-btn upload btn-file" data-url="{{ absolute_url(path('domain_business_images_upload')) }}">
                                    {{ form_widget(businessProfileForm.files) }}
                                    <i class="fa fa-upload" aria-hidden="true"></i>
                                    <span>{% trans %}BROWSE{% endtrans %}</span>
                                </label>

                                <label class="upload-label">OR</label>

                                <input type="text" id="remote-image-url" class="upload-input form-control">

                                <label class="btn green-btn upload-url btn-file" id="start-remote-image-upload">
                                    <i class="fa fa-globe" aria-hidden="true"></i>
                                    <span>{% trans %}UPLOAD BY URL{% endtrans %}</span>
                                </label>
                            </div>

                            <div id="images-spin-container"></div>

                            <div class="col-xs-12 table-responsive table-media-image">
                                <table class="table" {% if businessProfileForm.images | length <= 0 and not businessProfile.background and not businessProfile.logo %}style="display: none"{% endif %}>
                                    <tr>
                                        <th></th>
                                        <th>{% trans %}PRIMARY{% endtrans %}</th>
                                        <th>{% trans %}TYPE{% endtrans %}</th>
                                        <th>{% trans %}DESCRIPTION{% endtrans %}</th>
                                        <th>{% trans %}REMOVE{% endtrans %}</th>
                                    </tr>
                                    <tbody id="gallery" {% if businessProfileForm.images | length <= 0 %}style="display: none"{% endif %}>
                                        {%
                                            include 'DomainBusinessBundle:Images/blocks:gallery.html.twig'
                                            with { 'images': businessProfileForm.images }
                                        %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    {% if businessProfileForm.video is defined %}
                        <div class="form-group card-item">
                            <div class="card-item-name">
                                <span>{% trans %}Video{% endtrans %}</span>
                            </div>
                            <div class="col-xs-12 form-col video">
                                <div class="col-xs-12">
                                    <span>{% trans %}UPLOAD VIDEO{% endtrans %}:</span>
                                </div>
                                <div class="col-xs-12">
                                    <label class="btn green-btn upload btn-file" data-url="{{ absolute_url(path('domain_business_local_videos_upload')) }}">
                                        {{ form_widget(businessProfileForm.videoFile) }}
                                        <i class="fa fa-upload" aria-hidden="true"></i>
                                        <span>BROWSE</span>
                                    </label>

                                    <label class="upload-label">OR</label>

                                    <input type="text" id="remote-video-url" class="upload-input form-control" placeholder="">

                                    <label class="btn green-btn upload-url btn-file" id="start-remote-video-upload">
                                        <i class="fa fa-globe" aria-hidden="true"></i>
                                        <span>{% trans %}UPLOAD BY URL{% endtrans %}</span>
                                    </label>
                                </div>

                                <div id="videos-spin-container"></div>

                                <div id="video">
                                    {% if businessProfile.video %}
                                        {%
                                            include 'DomainBusinessBundle:Videos/blocks:video.html.twig'
                                            with { 'form': businessProfileForm.video, 'media': businessProfile.video }
                                        %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% do businessProfileForm.video.setRendered %}
                    {% endif %}
                </div>
            </div>

            {% include 'DomainBusinessBundle:Profile:blocks/form_footer.html.twig' %}
        </div>
    </div>
</section>