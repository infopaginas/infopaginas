<div class="col-md-6 header-form">
    <form class="form-horizontal search-form"  action="{{ path('domain_search_index')}}">
        <span class="form-title">{% trans %}We can find everything!{% endtrans %}</span>

        <div class="form-group row">
            <div class="col-xs-12">
                <input type="text" id='searchBox' name='q' placeholder="{% trans %}What do you want to find?{% endtrans %}" data-placeholder="{% trans %}What do you want to find?{% endtrans %}" data-error-placeholder="{% trans %}Please enter a search term{% endtrans %}" class="form-control what">
                <ul id="searchHint" class="search-dropdown recent-searches" style="display: none;"><li class="search-hint">{% trans %}Search by{% endtrans %}<b> {% trans %}business name{% endtrans %},</b> {% trans %}or{% endtrans %}<b> {% trans %}keyword{% endtrans %}</b></li></ul>
                <ul id="searchResultsAutosuggest" data-analytics="" class="search-dropdown autosuggest-term" data-impressed="1" style="display: none;"></ul>
            </div>
            <div class="col-xs-8 search-input">
                <input type="hidden" id='searchLat' name='lat' value="">
                <input type="hidden" id='searchLng' name='lng' value="">
                <input type="hidden" id='searchLocationGeoLoc' name='geoLoc' value="">

                <input type="text" id='searchLocation' name='geo' class="form-control" placeholder="{% trans %}San Juan{% endtrans %}"><span class="cross"></span>
            </div>
            <div class="col-xs-4 search-button">
                <button type="submit" id='searchButton' class="btn btn-primary green-btn search-btn"><i class="fa fa-search"
                                                                                      aria-hidden="true"></i><span>{% trans %}Search{% endtrans %}</span>
                </button>
            </div>
        </div>
    </form>
</div>
