<select class="form-control select-control order-by-select">
    <option data-route="{{ absolute_url(path(pageRouter, searchData|merge({'order': 'relevance'}))) }}"
        {% if app.request.get('order') == 'relevance' %}selected{% endif %} value="relevance">
        {% trans %}Relevance{% endtrans %}
    </option>
    <option data-route="{{ absolute_url(path(pageRouter, searchData|merge({'order': 'distance'}))) }}"
        {% if app.request.get('order') == 'distance' %}selected{% endif %} value="distance">
        {% trans %}Distance{% endtrans %}
    </option>
</select>
