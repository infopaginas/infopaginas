{% set base_template = 'OxaSonataAdminBundle::layout.html.twig' %}
{% extends "OxaSonataUserBundle:Admin/Security:login.html.twig" %}

{% block sonata_wrapper %}
    <div class="form-box" id="login-box">
        <div class="header">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</div>
        <div class="body bg-gray">
            <p>{{ 'resetting.password_already_requested'|trans({}, 'OxaSonataUser') }}</p>
        </div>
        <div class="footer">
            <p><a href="{{ absolute_url(path('sonata_user_admin_security_login')) }}"
                  class="text-center">{{ 'title_user_authentication'|trans({}, 'SonataUserBundle') }}</a></p>
        </div>
    </div>
{% endblock sonata_wrapper %}
