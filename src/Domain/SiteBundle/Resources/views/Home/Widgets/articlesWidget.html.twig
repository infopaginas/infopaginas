<section id="articles-videos" class="articles-videos">
    <div class="container">
        <div class="row">
            <div class="col-md-6 articles-section">
                <div class="section-title"><span class="blue-c">Articles</span>
                    <hr>
                    <a href="{{ path('domain_article_homepage') }}" class="btn">View more articles</a></div>
                <div class="articles">
                    <!-- TEMP for construction for render first 2 articles -->
                    {% for i in 0..1 %}
                        <div class="col-xs-6 article">
                            <div class="article-pic"><a href="#"><img src="{% path articles[i].getImage(), 'homepage' %}"></a>
                            </div>
                            <div class="article-info">
                            <!-- temp link to articles page -->
                                <a href="{{ path('domain_article_homepage', { 'id' : articles[i].getId() }) }}" class="article-title blue-c">
                                    {{ articles[i].getTitle() }}
                                </a>

                                <div class="article-area green-c">{{ articles[i].getCategory().getName() }}</div>
                                <div class="article-text">
                                    {{ articles[i].getDescription() }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-6 videos-section">
                <div class="section-title"><span class="blue-c">Videos</span>
                    <hr>
                    <a href="#" class="btn">View more videos</a></div>
                <div class="articles videos">
                    <!-- TEMP for construction for render first 2 articles -->
                    {% for i in 2..3 %}
                        <div class="col-xs-6 article">
                            <div class="article-pic"><a href="#"><img src="{% path articles[i].getImage(), 'homepage' %}"></a>
                            </div>
                            <div class="article-info">
                            <!-- temp link to articles page -->
                                <a href="{{ path('domain_article_homepage', { 'id' : articles[i].getId() }) }}" class="article-title blue-c">
                                    {{ articles[i].getTitle() }}
                                </a>

                                <div class="article-area green-c">{{ articles[i].getCategory().getName() }}</div>
                                <div class="article-text">
                                    {{ articles[i].getDescription() }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
