<!-- Modal Registration -->
<div class="modal fade" id="regModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&#10005;</button>
                <h4 class="modal-title">Create account</h4>
            </div>
            <div class="modal-body">
                <div class="terms">
                    By joining Infopaginas you agree to our
                    <a href="">Terms of Service</a> and <a href="">Privacy Policy</a>.
                    We value your privacy, and will not post to your wall without your permission.
                </div>
                <form class="form-horizontal login-form">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input class="form-control" type="text" placeholder="First name">
                            </div>
                            <div class="col-xs-6">
                                <input class="form-control" type="text" placeholder="Last name">
                            </div>
                            <div class="col-xs-12">
                                <input class="form-control" type="email" placeholder="Email">
                                <input class="form-control" type="password" placeholder="Password">
                                <input class="form-control" type="password" placeholder="Confirm password">
                                <input class="form-control" type="text" placeholder="Location">
                            </div>
                            <div class="col-xs-12">
                                <a href="" class="green-btn login-btn">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    Create Account
                                </a>
                            </div>
                            <div class="col-xs-12 alt-block">
                                <span class="alternative-login">or</span>
                            </div>
                            <div class="col-xs-12 social-buttons">
                                <a href="" class="facebook-btn btn">
                                    <span>Log In with</span><i class="fa fa-facebook" aria-hidden="true"></i>
                                </a>
                                <a href="" class="google-btn btn">
                                    <span>Log In with</span><i class="fa fa-google-plus" aria-hidden="true"></i>
                                </a>
                            </div>
                            <div class="col-xs-12 question-block">
                                <span>Already have an account? </span>
                                <a href="" class="create-acc" data-dismiss="modal" data-toggle="modal" data-target="#loginModal">
                                    Log In<span>&#187;</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>