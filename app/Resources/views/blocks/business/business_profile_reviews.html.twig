{% set businessReviewsCount = get_business_profile_reviews_count(business) %}
{% set reviewsAvgRating = get_business_profile_reviews_avg_rating(business) %}

<div class="reviews">
    {% if businessReviewsCount > 0 %}
        <a href="{{ path('domain_business_profile_view', { 'citySlug' : business.citySlug, 'slug' : business.getSlug() }) }}#reviews">
            {% include ':blocks/business:review_rating_stars.html.twig' with { 'rating': reviewsAvgRating } %}
            <span>{{ businessReviewsCount }} {% trans %}Reviews{% endtrans %}</span>
        </a>
    {% else %}
        {% include ':blocks/business:review_rating_stars.html.twig' with { 'rating': reviewsAvgRating } %}
        <span>{{ businessReviewsCount }} {% trans %}Reviews{% endtrans %}</span>
    {% endif %}
</div>
