{% if object.deletedAt is null %}
    {% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
        <a href="{{ admin.generateObjectUrl('edit', object) }}" class="btn btn-sm btn-default edit_link" title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}">
            <i class="glyphicon glyphicon-pencil"></i>
        </a>
    {% endif %}
    {% if admin.hasRoute('copy') %}
        <a href="{{ admin.generateObjectUrl('copy', object) }}" class="btn btn-sm btn-default" title="{{ 'action_copy'|trans({}, 'ApplicationSonataAdminBundle') }}">
            <i class="glyphicon glyphicon-subtitles"></i>
        </a>
    {% endif %}
    {% if admin.isGranted('SHOW', object) and admin.hasRoute('show') %}
        <a href="{{ admin.generateObjectUrl('show', object) }}" class="btn btn-sm btn-default show_link" title="{{ 'action_show'|trans({}, 'SonataAdminBundle') }}">
            <i class="glyphicon glyphicon-eye-open"></i>
        </a>
    {% endif %}
    {% if admin.isGranted('DELETE', object) and admin.hasRoute('delete') %}
        <a href="{{ admin.generateObjectUrl('delete', object) }}" class="btn btn-sm btn-default delete_link" title="{{ 'action_delete'|trans({}, 'SonataAdminBundle') }}">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    {% endif %}
{% else %}
    {% if is_granted('ROLE_RESTORE_ABLE') and admin.hasRoute('restore') %}
        <a href="{{ admin.generateObjectUrl('restore', object) }}" class="btn btn-sm btn-default delete_link" title="{{ 'action_restore'|trans({}, 'ApplicationSonataAdminBundle') }}">
            <i class="glyphicon glyphicon-upload"></i>
        </a>
    {% endif %}
{% endif %}
{% if is_granted('ROLE_PHYSICAL_DELETE_ABLE') and admin.hasRoute('delete_physical') %}
    <a href="{{ admin.generateObjectUrl('delete_physical', object) }}" class="btn btn-sm btn-default delete_link" title="{{ 'action_delete_physical'|trans({}, 'ApplicationSonataAdminBundle') }}">
        <i class="glyphicon glyphicon-remove"></i>
    </a>
{% endif %}
