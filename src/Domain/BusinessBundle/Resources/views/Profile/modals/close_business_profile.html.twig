<!--Modal review-->
<div class="modal fade in" id="closeBusinessProfileModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">âœ•</button>
                <h4 class="modal-title">
                    {% trans %}Close Business Profile Request{% endtrans %}
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal review-form" id="closeBusinessProfileForm">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="row">
                                    {{ form_widget(closeBusinessProfileForm.reason) }}
                                    <span class="help-block"></span>
                                    {{ form_rest(closeBusinessProfileForm) }}
                                </div>
                            </div>
                            <div id="close-business-profile-spinner-container"></div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <a href="#" data-business-profile-id="{{ businessProfile.getId() }}"
                                       id="closeBusinessProfileButton" class="green-btn review-btn">
                                        <i class="fa fa-save" aria-hidden="true"></i>
                                        {% trans %}Submit{% endtrans %}
                                    </a>
                                </div>
                                <div class="col-xs-6">
                                    <a href="#" class="gray-btn close-review" data-dismiss="modal">
                                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                                        {% trans %}Close{% endtrans %}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>