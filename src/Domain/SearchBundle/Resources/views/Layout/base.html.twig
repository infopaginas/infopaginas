{% extends "DomainSiteBundle:Layout:base.html.twig" %}

{% block headerFilters %}
<!-- Filter -->
    <div class="container">
        <div class="row filters">
            <div class="col-md-8 filter-block">
                <a href="" data-toggle="modal"
                       data-target="#filterModal" class="filter-by"><i class="fa fa-filter" aria-hidden="true"></i><span>Filter by</span></a>

                <div class="dropdown category-drop">
                    <div class="select-container">
                        <select class="form-control select-control">
                            <option value="" disabled selected>Category</option>
                            {% if categories is not empty %}
                                {% for category in categories %}
                                    <option value="{{ category.getName() }}">{{ category.getName() }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="dropdown category-drop">
                    <div class="select-container">
                        <select class="form-control select-control">
                            <option>Neighborhoods</option>
                            <option>NY</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4 tab-block">
                {% block tabMenu %}
                <ul class="tab-btn">
                    <li class="active"><a href="{{ path('domain_search_index', app.request.query.all) }}"><i class="fa fa-list" aria-hidden="true"></i><span>list</span></a>
                    </li>
                    <li><a href="{{ path('domain_search_map', app.request.query.all) }}"><i class="map-icon"></i><span>map</span></a></li>
                    <li><a href=""><i class="compare-icon"></i><span>compare</span></a></li>
                </ul>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
