{% import '::widgets/custom_form_label_redesign.html.twig' as custom_form_label %}

<div class="form__column column--english">
    <h3 class="language-title">{{ blockTitle|trans }}</h3>

    <div class="form__section">
        <h2>{% trans %}General{% endtrans %}</h2>

        <div class="form__row">
            <div class="form__field field--name">
                {{ custom_form_label.widget(businessProfileForm['name' ~ langPostfix]) }}
                {{ form_widget(businessProfileForm['name' ~ langPostfix]) }}
            </div>
        </div>
    </div>

    <div class="form__section">
        <h2>{% trans %}Business Description{% endtrans %}</h2>

        {% if businessProfileForm['slogan' ~ langPostfix] is defined %}
            <div class="form__row">
                <div class="form__field field--slogan">
                    {{ custom_form_label.widget(businessProfileForm['slogan' ~ langPostfix]) }}
                    {{ form_widget(businessProfileForm['slogan' ~ langPostfix]) }}
                    <small class="field__description">
                        {% trans %}Maximum 255 characters{% endtrans %}.
                    </small>
                </div>
            </div>
        {% endif %}

        <div class="form__row">
            <div class="form__field field--description">
                {{ custom_form_label.widget(businessProfileForm['description' ~ langPostfix]) }}
                {{ form_widget(businessProfileForm['description' ~ langPostfix], {'attr': {'placeholder': ''}}) }}
            </div>
        </div>
        <div class="form__row">
            <div class="form__field field--products">
                {{ custom_form_label.widget(businessProfileForm['product' ~ langPostfix]) }}
                {{ form_widget(businessProfileForm['product' ~ langPostfix], {'attr': {'placeholder': ''}}) }}
            </div>
        </div>
        <div class="form__row">
            <div class="form__field field--brands">
                {{ custom_form_label.widget(businessProfileForm['brands' ~ langPostfix]) }}
                {{ form_widget(businessProfileForm['brands' ~ langPostfix], {'attr': {'placeholder': ''}}) }}
            </div>
        </div>
    </div>
</div>