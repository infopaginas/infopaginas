<div class="articles">
    <!-- TEMP for construction for render first 2 articles -->
    {% for article in articles %}
        <div class="col-xs-6 article">
            <div class="article-pic"><a href="{{ path('domain_article_view', { 'slug' : article.getSlug() }) }}"><img src="{% path article.getImage(), 'homepage' %}"></a>
            </div>
            <div class="article-info">
                <!-- temp link to articles page -->
                <a href="{{ path('domain_article_view', { 'slug' : article.getSlug() }) }}" class="article-title blue-c">
                    {{ article.getTitle() }}
                </a>

                <div class="article-area green-c">{{ article.getCategory().getName() }}</div>
                <div class="article-text">
                    {{ article.getDescription() }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
