<!--Modal review-->
<div class="modal fade in" id="writeReviewModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">âœ•</button>
                <h4 class="modal-title">Write a review</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal review-form" id="createReviewForm" name="">
                    <div id="createReviewSpinContainer" class="spinner-container"></div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label>Rating</label>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="reviews block-title-reviews">
                                            <div class="star-rating selectable active">
                                                <span class="fa fa-star-o fa-star-selected" data-rating="1"></span>
                                                <span class="fa fa-star-o fa-star-selected" data-rating="2"></span>
                                                <span class="fa fa-star-o fa-star-selected" data-rating="3"></span>
                                                <span class="fa fa-star-o fa-star" data-rating="4"></span>
                                                <span class="fa fa-star-o fa-star" data-rating="5"></span>
                                                <input type="hidden"  class="rating-value" value="3">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <input type="text" class="form-control" placeholder="Your name">
                                    <textarea  required="required" class="form-control review"></textarea>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <a href="#" id="createReviewButton" class="green-btn review-btn">
                                        <i class="fa fa-save" aria-hidden="true"></i>Submit</a>
                                </div>
                                <div class="col-xs-6">
                                    <a href="#" class="gray-btn close-review" data-dismiss="modal">
                                        <i class="fa fa-times-circle" aria-hidden="true"></i>Close</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>