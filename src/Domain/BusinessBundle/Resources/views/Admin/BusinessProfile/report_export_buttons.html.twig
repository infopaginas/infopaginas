{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}

{% block field %}
    {% if object.id is not null %}
        <div class="form-group">
            <button type="button" data-href="{{ path('domain_business_admin_reports_pdf_export') }}" data-export-type="export-pdf" class="btn green-btn">
                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                PDF
            </button>
        </div>
        <div class="form-group">
            <button type="button" data-href="{{ path('domain_business_admin_reports_excel_export') }}" data-export-type="export-excel" class="btn green-btn">
                <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                Excel
            </button>
        </div>
        <div class="form-group">
            <button type="button" data-href="{{ path('domain_business_admin_reports_pdf_export') }}" data-export-type="print" class="btn green-btn">
                <i class="fa fa-print" aria-hidden="true"></i>
                Print
            </button>
        </div>
    {% endif %}
{% endblock %}
