<div class="toolbar" data-bw-gtm-component="review-breadcrumbs">
    <div class="toolbar__nav">
        <a href="{{ absolute_url(path('domain_site_home_index')) }}" title="{% trans %}Home{% endtrans %}">
            <button id="breadcrumb_location" type="button" class="button button--action button--location">
                <i class="fa fa-list"></i>
                <span>{% trans %}Homepage{% endtrans %}</span>
            </button>
        </a>

        <a href="{{ absolute_url(path('domain_business_profile_view', {'citySlug': businessProfile.citySlug, 'slug': businessProfile.slug})) }}" title="{{ businessProfile.name }}" data-bw-gtm-event-click data-bw-gtm-label="{{ businessProfile.name|truncate(breadcrumb_max_length) }}::{{ absolute_url(path('domain_business_profile_view', {'citySlug': businessProfile.citySlug, 'slug': businessProfile.slug})) }}">
            <button id="breadcrumb_location" type="button" class="button button--action button--location">
                <span>{{ businessProfile.name|truncate(breadcrumb_max_length) }}</span>
            </button>
        </a>

        <div class="breadcrumb">
            <a href="#" title="{{ page.title }}" class="button categorie__item categorie__parent">
                <span>{{ page.title|truncate(breadcrumb_max_length) }}</span>
            </a>
        </div>
    </div><!-- toolbar__nav -->
</div><!-- toolbar -->
