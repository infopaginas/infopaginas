<!-- Modal Forgotten Password -->
<div id="forgottenPasswordModal" class="modal modal--forget" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal__outside"></div>
    <div class="modal__content">
        <h2>{% trans %}Reset Password{% endtrans %}</h2>
        <div class="modal__section">
            <form class="account-form login-form" id="forgottenPasswordForm" name="{{ resetPasswordRequestForm.vars.name }}">
                <div class="form__field field--user">
                    <label>{% trans %}Email{% endtrans %}</label>
                    {{ form_widget(resetPasswordRequestForm.email, {'attr': {'placeholder':''}} ) }}
                </div>
                <div class="form__actions">
                    {{ form_rest(resetPasswordRequestForm) }}
                    <button type="button" class="button button--action" id="resetPasswordRequestButton">{% trans %}Reset Password{% endtrans %}</button>
                </div>
            </form>
        </div><!-- modal__section -->
        <div class="modal__section login__footer"></div><!-- modal__section -->
        <button type="button" class="button--remove hide-modal"><i class="fa fa-remove"></i></button>
    </div><!-- modal__content -->
</div>
