{% extends 'DomainReportBundle:Admin/Default:list.html.twig' %}

{% block sonata_breadcrumb %}
    {% include "@DomainReport/Admin/report_breadcrumbs.html.twig" %}
{% endblock %}

{% block list_table %}
    {% if data|length > 0 %}
        <div class="col-xs-12 col-md-12">
            <div class="box box-primary">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-bordered table-striped">
                        {% block table_header %}
                            <thead>
                            <tr class="sonata-ba-list-field-header">
                                <th class="sonata-ba-list-field-header-text">{% trans %}Suggestion Type{% endtrans %}</th>
                                <th class="sonata-ba-list-field-header-text">{% trans %}# of suggestions{% endtrans %}</th>
                                <th class="sonata-ba-list-field-header-text">{% trans %}Action{% endtrans %}</th>
                            </tr>
                            </thead>
                        {% endblock %}

                        {% block table_body %}
                            <tbody>
                                {% for row in data %}
                                    <tr>
                                        <td class="sonata-ba-list-field sonata-ba-list-field-string">
                                            {{ row.key|humanize }}
                                        </td>
                                        <td class="sonata-ba-list-field sonata-ba-list-field-string">
                                            {{ row.count }}
                                        </td>
                                        <td class="sonata-ba-list-field sonata-ba-list-field-string">
                                            <a href="{{ path('domain_admin_business_suggest_edits_business_key', {id: businessProfile.id, key: row.key}) }}" class="btn btn-sm btn-default show_link btn-list-action"
                                               title="">
                                                <i class="glyphicon glyphicon-eye-open"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        {% endblock %}
                        {% block table_footer %}{% endblock %}
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="callout callout-info">
            {{ 'no_result'|trans({}, 'SonataAdminBundle') }}
        </div>
    {% endif %}
{% endblock %}
