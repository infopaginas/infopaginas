<!-- Modal Change Password -->
<div id="resetPasswordModal" class="modal modal--reset" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal__outside"></div>
    <div class="modal__content">
        <h2>{% trans %}Update Password{% endtrans %}</h2>
        <div class="modal__section">
            <form class="account-form login-form" id="resetPasswordForm" name="{{ resetPasswordForm.vars.name }}">
                <div class="form__field field--user field-active">
                    <label>{% trans %}Old password{% endtrans %}</label>
                    {{ form_widget(resetPasswordForm.plainPassword.first) }}
                </div>
                <div class="form__field field--user">
                    <label>{% trans %}New password{% endtrans %}</label>
                    {{ form_widget(resetPasswordForm.plainPassword.second) }}
                </div>
                <div class="form__actions">
                    {{ form_rest(resetPasswordForm) }}
                    <button type="button" class="button button--action" id="resetPasswordButton">{% trans %}Update Password{% endtrans %}</button>
                </div>
            </form>
        </div><!-- modal__section -->
        <div class="modal__section login__footer"></div><!-- modal__section -->
        <button type="button" class="button--remove hide-modal"><i class="fa fa-remove"></i></button>
    </div><!-- modal__content -->
</div>
