{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}

{% block field%}
    {% if object.logo is not null %}
        <a href="{{ path('admin_sonata_media_media_edit', {'id' : object.logo|sonata_urlsafeid }) }}">
            {% thumbnail object.logo, 'small' %}
        </a>
    {% endif %}
{% endblock %}
