<div class="icons">
    {% if hasSubscription(business, "CODE_PREMIUM_GOLD") and business.getImages() | length > 0  %}
        <a href="{{ path('domain_business_profile_view', { 'slug' : business.getSlug() }) }}#photo">
            <i class="photo"></i>
        </a>
    {% endif %}

    {% if hasSubscription(business, "CODE_PREMIUM_PLATINUM") and business.getVideo() is not null %}
        <a href="{{ path('domain_business_profile_view', { 'slug' : business.getSlug() }) }}#video">
            <i class="video"></i>
        </a>
    {% endif %}

    {% if hasSubscription(business, "CODE_PRIORITY") and business.getImages() | length > 0 %}
        <a href="{{ path('domain_business_profile_view', { 'slug' : business.getSlug() }) }}#ad">
            <i class="ad"></i>
        </a>
    {% endif %}
</div>

{% if reviewsCount > 0 %}
    <div class="reviews">
        <a href="{{ path('domain_business_profile_view', { 'slug' : business.getSlug() }) }}#reviews">
            {% include ':blocks/business:review_rating_stars.html.twig'
                with { 'rating': reviewsAvgRating } %}
            <span>{{ reviewsCount }} Reviews</span>
        </a>
    </div>
{% endif %}

