<!--Modal review-->
<div class="modal fade in" id="writeReviewModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">âœ•</button>
                <h4 class="modal-title">
                    {% trans %}Write a review{% endtrans %}
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal review-form" id="createReviewForm" name="">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label>
                                            {% trans %}Rating{% endtrans %}
                                        </label>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="reviews block-title-reviews">
                                            {% include ':blocks/business:review_rating_stars.html.twig' with {
                                                'rating': 0,
                                                'isSelectable': true,
                                                'input' : reviewForm.rating
                                            } %}
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    {{ form_widget(reviewForm.username) }}
                                    <span class="help-block"></span>
                                    {{ form_widget(reviewForm.content) }}
                                    <span class="help-block"></span>
                                    {{ form_rest(reviewForm) }}
                                </div>
                            </div>
                            <div id="create-review-spinner-container"></div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <a href="#" data-business-profile-id="{{ businessProfile.getId() }}"
                                       id="createReviewButton" class="green-btn review-btn">
                                        <i class="fa fa-save" aria-hidden="true"></i>
                                        {% trans %}Submit{% endtrans %}
                                    </a>
                                </div>
                                <div class="col-xs-6">
                                    <a href="#" class="gray-btn close-review" data-dismiss="modal">
                                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                                        {% trans %}Cancel{% endtrans %}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>